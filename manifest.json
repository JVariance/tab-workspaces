{
  "manifest_version": 2,
  "name": "Tab Workspaces",
  "version": "1.3.0",

  "description": "Organize your tabs into workspaces. Switch between workspaces to change which tabs are displayed at the moment.",
  "icons": {
    "48": "icons/workspaces-light-filled-48.png",
    "96": "icons/workspaces-light-filled-96.png"
  },

  "homepage_url": "https://github.com/JVariance/tab-workspaces",

  "permissions": [
    "cookies",
    "menus",
    "storage",
    "tabs",
    "tabHide",
    "activeTab",
    "<all_urls>"
  ],

  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/workspaces-light-filled.svg",
    "default_title": "Workspaces",
    "default_popup": "popup/popup.html",
    "theme_icons": [{
      "light": "icons/workspaces-dark-filled-16.png",
      "dark": "icons/workspaces-light-filled-16.png",
      "size": 16
    }, {
      "light": "icons/workspaces-dark-filled-32.png",
      "dark": "icons/workspaces-light-filled-32.png",
      "size": 32
    }]
  },

  "sidebar_action": {
    "browser_style": true,
    "default_title": "Workspaces",
    "default_panel": "sidebar/sidebar.html",
    "default_icon": "icons/workspaces-dark-filled.svg",
    "open_at_install": true
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Alt+W"
      },
      "description": "Open workspace list"
    },
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Q"
      },
      "description": "Open workspace sidebar"
    },
    "next-workspace": {
      "suggested_key": {
        "default": "Ctrl+Alt+C"
      },
      "description": "Next workspace"
    },
    "previous-workspace": {
      "suggested_key": {
        "default": "Ctrl+Alt+X"
      },
      "description": "Previous workspace"
    },
    "create-workspace": {
      "suggested_key": {
        "default": "Ctrl+Alt+A"
      },
      "description": "Create workspace"
    }
  },

  "background": {
    "scripts": [
      "background/util.js",
      "background/backgroundLogic.js",
      "background/workspace.js",
      "background/workspaceStorage.js",
      "background/messageHandler.js"
    ]
  },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "omnibox": {
    "keyword": "ws"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "tabworkspaces@jayp.com"
    }
  },
  "web_accessible_resources": [
    "sidebar/sidebar.html",
    "sidebar/js/sidebar.js"
  ]
}